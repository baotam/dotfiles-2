[alias]
    unstash = stash apply

[commit]
    gpgsign = true

[core]
	hooksPath = ~/.config/git/hooks
	pager = delta

[credential]
    helper = osxkeychain

[delta]
	navigate = true  # use n and N to move between diff sections
	side-by-side = true
    
[diff]
	colorMoved = default

[format]
    signOff = true

[gpg]
    program = {{ expandenv "$HOMEBREW_PREFIX/bin/gpg" }}

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[user]
    name = {{ .fullname }}
    email = {{ .gitemail }}
    signingkey = {{ .gpgkey }}
